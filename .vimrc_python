source ~/.vimrc

" ================================
" Color schemes action right there

" set background=dark
" colorscheme solarized

colorscheme zenburn
" ================================

" Adds proper PEP8 indentation
au BufNewFile,BufRead *.py
    \ set tabstop=4 |
    \ set softtabstop=4 |
    \ set shiftwidth=4 |
    \ set textwidth=120 |
    \ set expandtab |
    \ set autoindent |
    \ set fileformat=unix

" Automatic triming of trailing whitespaces
autocmd BufWritePre * %s/\s\+$//e

" Configuring ALE
let g:ale_fixers = {'*': ['remove_trailing_lines', 'trim_whitespace']}
let b:ale_linters = {'python': ['flake8']}

" To make vim aware of python3 and virtual environments
let g:pymode_python = 'python3'
let g:pymode_virtualenv = 1

" I'm not sure; highlighting as well
let python_highlight_all=1

" Turn on syntax highlighting
syntax on

" Leader key + g will goto definition
map <leader>g  :YcmCompleter GoToDefinitionElseDeclaration<CR>
