source ~/.vimrc

" ================================
" Color schemes action right there

" set background=dark
" colorscheme solarized

colorscheme zenburn
" ================================

" Adds proper PEP8 indentation
au BufNewFile,BufRead *.py
    \ set tabstop=4 |
    \ set softtabstop=4 |
    \ set shiftwidth=4 |
    \ set textwidth=120 |
    \ set expandtab |
    \ set autoindent |
    \ set fileformat=unix
