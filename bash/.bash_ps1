function __git_ps1 () {
	ref=$(git symbolic-ref HEAD 2> /dev/null) || return
	PS_GIT="${ref#refs/heads/}"
	printf -- " \033[1;33m%s\033[m \033[1;37m❯\033[m" "Ґ $PS_GIT"
}

PS1=' \[\033[1;36m\]\w\[\033[m\] \[\033[1;37m\]❯\[\033[m\]$(__git_ps1)\n \[\033[1;37m\]↳\[\033[m\] '
PS1_BASE=' \[\033[1;36m\]\w\[\033[m\] \[\033[1;37m\]❯\[\033[m\]$(__git_ps1) '
