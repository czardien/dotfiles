# Just needs a python3 installation
pyvenv () {
  local name
  name=$1

  python3 -m venv ~/python/venvs/$name && \
  echo -e "alias activate-$name='source ~/python/venvs/$name/bin/activate'" >> ~/dotfiles/.bash/.pythonrc
}

